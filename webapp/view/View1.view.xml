<mvc:View controllerName="zso.controller.View1"
   xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:t="sap.ui.table"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <Button text="{i18n>soButton}" press="onPress"/>
        <VBox class="sapUiTinyMargin">
            <Label text="{i18n>customerName}" />
            <Input />
        </VBox>

        <t:Table    id="table1"
                    rows="{/SoHeaderSet}"
                    visibleRowCount="10"
                    threshold="10"
                    class="sapUiTinyMargin"
                    selectionMode="MultiToggle">
                    <t:toolbar>
                        <OverflowToolbar>
                            <Title id="title" text="Orders"></Title>
                        </OverflowToolbar>
                    </t:toolbar>
                    <t:columns>
                        <t:Column width="8rem" sortProperty="OrderId">
                            <Label text="OrderId" />
                            <t:template>
                                <Text text="{OrderId}" wrapping="false" />
                            </t:template>
                        </t:Column>
                        <t:Column width="16rem" sortProperty="ClientId" filterProperty="ClientId" autoResizable="true"
                        filtered="true">
                            <Label text="Client ID" />
                            <t:template>
                                <Text text="{ClientId}" wrapping="false" />
                            </t:template>
                        </t:Column>
                        <t:Column width="10rem" sortProperty="NetValue" filterProperty="NetValue" autoResizable="true">
                            <Label text="Net Value" />
                            <t:template>
                                <Text text="{NetValue}" wrapping="false" />
                            </t:template>
                        </t:Column>
                        <t:Column width="16rem" sortProperty="CreatedBy" filterProperty="CreatedBy" autoResizable="true"
                        filtered="false">
                            <Label text="Created By" />
                            <t:template>
                                <Text text="{CreatedBy}" wrapping="false" />
                            </t:template>
                        </t:Column>                          
                        <t:Column width="16rem" sortProperty="DocCategory" filterProperty="DocCategory" autoResizable="true"
                        filtered="false">
                            <Label text="Document category" />
                            <t:template>
                                <Text text="{DocCategory}" wrapping="false" />
                            </t:template>
                        </t:Column>                        
                    </t:columns>
                </t:Table>


    </Page>
</mvc:View>
